---
// Import statements and JavaScript code can be added here
// Define the component's properties
interface LaunchDetailsProps {
	launch: {
		name: string
		date_utc: string
		details: string
		links: {
			patch: {
				large: string
			}
			article: string
		}
		success: boolean
		rocket: {
			details: string
			payload_capacity: number
		}
	}
}

const defaultProps: LaunchDetailsProps = {
	launch: {
		name: 'Unknown Mission',
		date_utc: 'Unknown Date',
		details: 'No details available',
		links: {
			patch: {
				large: '/placeholder.svg'
			},
			article: '#'
		},
		success: false,
		rocket: {
			details: 'No rocket information',
			payload_capacity: 0
		}
	}
}

let { launch } = Astro.props
launch = { ...defaultProps.launch, ...launch }
---

<!-- Component HTML with Tailwind CSS -->
<section class='w-full py-12 md:py-24 lg:py-32 xl:py-48'>
	<div class='container px-4 md:px-6'>
		<div class='grid items-center gap-6 lg:grid-cols-[1fr_550px] lg:gap-12 xl:grid-cols-[1fr_650px]'>
			<div class='space-y-4'>
				<div class='inline-block rounded-lg bg-gray-100 px-3 py-1 text-sm dark:bg-gray-800'>SpaceX Launch</div>
				<h1 class='text-3xl font-bold tracking-tighter sm:text-5xl md:text-6xl text-white'>
					{launch.name}
				</h1>
				<p class='max-w-[600px] text-gray-500 md:text-xl dark:text-gray-400'>
					{launch.details}
				</p>
				<p class='text-sm text-gray-500 dark:text-gray-400'>
					Launch Date: {new Date(launch.date_utc).toLocaleDateString()}
				</p>
			</div>
			<img
				alt='SpaceX Rocket Launch'
				class='mx-auto overflow-hidden rounded-xl object-cover object-center sm:w-full'
				src={launch.links.patch.large}
			/>
		</div>
	</div>
</section>
<!-- Additional sections would follow the same pattern, referring to the launch prop for dynamic data -->
