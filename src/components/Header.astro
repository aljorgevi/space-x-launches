---
import HeaderButton from './HeaderButton.astro'
import InfoIcon from './icons/InfoIcon.astro'
import RocketIcon from './icons/RocketIcon.astro'
import ClockIcon from './icons/ClockIcon.astro'
---

<header class='py-8 px-4 mx-auto max-w-xl lg:py-16 lg:px-6'>
	<div class='mx-auto text-center mb-8 lg:mb-16'>
		<h2 class='mb-4 text-5xl tracking-tight font-extrabold text-white'>SpaceX Launches ðŸš€</h2>
		<p class='font-light text-gray-500 sm:text-xl dark:text-gray-400'>all the information about SpaceX launches</p>
	</div>

	<navbar class='flex flex-col items-center justify-between w-full text-center md:flex-row'>
		<HeaderButton href='/'>
			last launches
			<RocketIcon slot='before' width='60' height='60' />
		</HeaderButton>
		<HeaderButton href='/about'>
			about
			<InfoIcon slot='before' width='60' height='60' />
		</HeaderButton>
		<HeaderButton href='/oldest'>
			oldest launches
			<ClockIcon slot='before' width='60' height='60' />
		</HeaderButton>
	</navbar>
</header>
